<% layout(layout_directory+'/mainLayout') -%>

<div class="kt-subheader   kt-grid__item" id="kt_subheader">
	<div class="kt-subheader__main">
		<h3 class="kt-subheader__title"> <%= page_title %> </h3>
		<span class="kt-subheader__separator kt-subheader__separator--v"></span>
		<div class="kt-subheader__breadcrumbs">
			<a href="<%= generateUrl('user.dashboard') %>" class="kt-subheader__breadcrumbs-home">Dashboard</a>
			<span class="kt-subheader__breadcrumbs-separator"></span>
			<span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active"><%= page_title %></span>
		</div>
	</div>
</div>

<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
	<div class="row">
		<div class="col-lg-12">
			<div class="kt-portlet">
				<form class="kt-form kt-form--label-right" id="create"
				action="<%= generateUrl('user.insert') %>" method="POST" enctype="multipart/form-data">
					<div class="kt-portlet__body">
						<div class="form-group row">
							<div class="col-lg-6">
								<label for="first_name" class="control-label">First Name</label>
								<div class="controls">
									<input id="first_name" name="first_name" type="text" autocomplete="off" placeholder="Enter First Name"
										class="form-control "/>
										<!-- <p> required data-validation-required-message="This field is required"
											value="" pattern="[A-Za-z]+" </p> -->
								</div>
							</div>						
							<div class="col-lg-6">
								<label for="last_name" class="control-label">Last Name</label>
								<div class="controls">
									<input id="last_name" name="last_name" type="text" autocomplete="off" placeholder="Enter Last Name"
										class="form-control" />
										<!-- <p> required data-validation-required-message="This field is required"
											value="" pattern="[A-Za-z]+"</p> -->
								</div>
							</div>
						</div>
						<div class="form-group row">
											
							<div class="col-lg-6">
								<label for="email" class="control-label">Email</label>
								<div class="controls">
									<input id="email" name="email" type="email" autocomplete="off" placeholder="Enter Email"
										class="form-control" />
										<!-- <p>required data-validation-required-message="This field is required"
											value="" data-validation-regex-regex="([A-Za-z0-9_\.-]+)@([\da-z\.-]+)\.([a-z\.]{2,6})"
											data-validation-regex-message="Enter Valid Email" aria-invalid="true" </p> -->
								</div>
							</div>
								<div class="col-lg-6">
									<label for="profile" class="control-label">Profile Picture</label>
									<div class="controls">
										<input id="profile" name="profile" type="file" 
											class="form-control"/>
											<!-- <p>	data-validation-regex-regex="([^\\s]+(\\.(?i)(jpg|png|gif|bmp))$)"
												required data-validation-required-message="This field is required"</p> -->
									</div>
								</div>
						</div>
						<div class="form-group row">
							<div class="col-lg-6">
								<label for="phone" class="control-label">Phone Number</label>
								<div class="controls">
									<input id="phone" name="phone" type="text" autocomplete="off" placeholder="Enter Phone Number"
										class="form-control"/>
										<!-- <p> required data-validation-required-message="This field is required"
											value="" pattern="^[ ()+]*([0-9][ ()+]*){10}$"
											data-validation-pattern-message="Enter 10 digit phone number" aria-invalid="true" </p> -->
								</div>
							</div>
							<div class="col-lg-6">
								<label >Date of birth </label>
								<div class="controls">
								  <input id="dob" name="dob" type="text" 
									  class="form-control" placeholder="dd/mm/yy"/>
									  <!-- <i class='far fa-calendar-alt'></i> -->
									  <!-- <p>required data-validation-required-message="This field is required"</p> -->
							  </div>
							  </div>
							</div>
							<div class="form-group row">
								<div class="col-lg-6">
									<label >Role </label>
									<select name="role" id="role"class="form-control required">
									  <option value="" selected disabled>Choose a Role Type</option>
									  <% response.data.map(data => {%>
										<option value="<%= data._id%>"><%= data.roleDisplayName%></option>
										<% })%>
									</select>
								  </div>
								</div>
					</div>
					<div class="kt-portlet__foot">
						<div class="kt-form__actions">
							<div class="row">
								<div class="col-lg-6">
									<button type="submit" class="btn btn-primary">Save</button>
									<a href="<%= generateUrl('user.listing') %>" class="btn btn-secondary">Cancel</a>
								</div>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>